///////Caso A se desea saber su dosis x demanda*******
fun main() {
    println("Ingresa el peso corporal en kg:")
    val pesoCorporal = readLine()?.toDoubleOrNull() ?: 0.0

    println("Ingresa el aumento de factor VIII deseado en %:")
    val aumentoDeseado = readLine()?.toDoubleOrNull() ?: 0.0

    val factor = 0.5
    val unidadesNecesarias = pesoCorporal * aumentoDeseado * factor

    println("Las unidades necesarias de Factor VIII son: $unidadesNecesarias UI")
}

/// se le pregunta al usuario si ya esta entratamiento pofilactico y se le solicita su peso unidades aplicadas se muestra el resultado 

fun main() {
    println("Ingresa el peso corporal en kg:")
    val pesoCorporal = readLine()?.toDoubleOrNull() ?: 0.0

    println("Ingresa las unidades administradas (UI):")
    val unidadesAdministradas = readLine()?.toDoubleOrNull() ?: 0.0

    // Cálculo del aumento previsto
    val aumentoPrevisto = 2 * (unidadesAdministradas / pesoCorporal)

    println("El aumento previsto del Factor VIII es: $aumentoPrevisto %")
}


/// profilaxis ///***********************************

fun main() {
    println("Ingresa la edad del paciente (años):")
    val edad = readLine()?.toIntOrNull() ?: return println("Edad inválida.")

    println("Ingresa el peso corporal del paciente en kg:")
    val pesoCorporal = readLine()?.toDoubleOrNull() ?: return println("Peso inválido.")

    println("Ingresa la altura del paciente en metros (ejemplo: 1.75):")
    val altura = readLine()?.toDoubleOrNull() ?: return println("Altura inválida.")

    // Cálculo del IMC
    val imc = pesoCorporal / (altura * altura)

    println("El IMC del paciente es: %.2f".format(imc))

    if (edad < 6) {
        // Calcular dosis para menores de 6 años (20-50 UI por kg)
        val dosisMinima = pesoCorporal * 20
        val dosisMaxima = pesoCorporal * 50

        println("Dosis recomendada para profilaxis en pacientes menores de 6 años:")
        println("Dosis mínima: $dosisMinima UI")
        println("Dosis máxima: $dosisMaxima UI")
        println("Frecuencia recomendada: 3-4 veces a la semana")
        println("Nota: El plazo de vida del factor VIII en el cuerpo es de aproximadamente 24 horas. Se recomienda administrar la dosis 2 a 3 veces por semana.")
    } else {
        // Calcular dosis para pacientes de 6 años o mayores según fórmula estándar
        println("Ingresa el aumento deseado de Factor VIII en %:")
        val aumentoDeseado = readLine()?.toDoubleOrNull() ?: return println("Porcentaje inválido.")

        val factor = 0.5
        val unidadesNecesarias = pesoCorporal * aumentoDeseado * factor

        // Condiciones basadas en el IMC para ajustar la dosis en caso de bajo peso o sobrepeso
        if (imc < 18.5) {
            println("Nota: El paciente presenta bajo peso según su IMC. La dosis puede necesitar ajustes.")
        } else if (imc > 24.9) {
              println("Nota: El paciente presenta sobrepeso según su IMC. La dosis puede necesitar ajustes.")
        }

        println("Unidades necesarias de Factor VIII: $unidadesNecesarias UI")
        println("Nota: El plazo de vida del factor VIII en el cuerpo es de aproximadamente 24 horas. Se recomienda administrar la dosis 2 a 3 veces por semana.")
        println("Durante el tratamiento, se recomienda una determinación adecuada de los niveles de factor VIII para establecer la dosis a administrar y la frecuencia de las infusiones. La respuesta individual de los pacientes al factor VIII puede variar, presentando semividas y recuperaciones diferentes.")
        println("La dosis en función del peso corporal puede requerir ajustes en pacientes con bajo peso o sobrepeso.")
    }
}
